            <TableColumn fx:id="tcEmail" prefWidth="190.0" text="E-mail" />
            <TableColumn fx:id="tcSenha" minWidth="0.0" prefWidth="145.0" text="Senha" />
        </columns>
      </TableView>
      <Button fx:id="btnAdicionarAluno" layoutX="39.0" layoutY="482.0" mnemonicParsing="false" onAction="#adicionarAluno" style="-fx-background-color: #14213d;" styleClass="buttonCancelar" text="Adicionar Aluno" textFill="WHITE" />
   </children>
