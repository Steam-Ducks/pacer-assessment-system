                        <Image url="@../assets/add-equipe.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <TextField fx:id="txtEquipe" layoutX="148.0" layoutY="117.0" prefHeight="26.0" prefWidth="350.0" promptText="Nome da Equipe" />
