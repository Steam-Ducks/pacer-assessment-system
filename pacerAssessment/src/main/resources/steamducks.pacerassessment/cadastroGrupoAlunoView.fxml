<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="536.0" prefWidth="460.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="steamducks.pacerassessment.CadastroGrupoAluno">
    <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label layoutX="14.0" layoutY="14.0" text="Grupo:" />
            <TextField fx:id="txtGrupo" layoutX="57.0" layoutY="10.0" prefHeight="26.0" prefWidth="279.0" />
         </children>
      </AnchorPane>
        <!-- Button for uploading CSV file -->
        <Button fx:id="btnUpload" onAction="#upload" text="subir csv" />

        <!-- TableView for displaying CSV data -->
        <TableView fx:id="tvAlunos">
            <columns>
                <TableColumn fx:id="tcNome" prefWidth="139.0" text="Nome" />
                <TableColumn fx:id="tcEmail" prefWidth="139.0" text="Email" />
                <TableColumn fx:id="tcSenha" prefWidth="141.0" text="Senha" />
            </columns>
        </TableView>

        <!-- Button for registering the data -->
        <Button fx:id="btnRegistrar" onAction="#registrar" text="Registrar" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
